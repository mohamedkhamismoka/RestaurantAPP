@{
    ViewData["Title"] = "MakeOrder";
}
@model CustomerVM;

@section style{
    <style>
        select.form-control:not([size]):not([multiple]) {
            height: calc(2.25rem + 6px);
        }

        .table select, .table input {
            width: 250px;
            height: calc(2.25rem + 2px);
        }

        .Action {
            width: 150px;
            display: flex;
            justify-content: space-around;
        }

    </style>
}

<div class="col-12">
    <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Make Order</h4>

                    <form>
                        <input type="hidden"  value="@Model.Id" id="customerid"/>
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Name</label>
                            <input class="form-control" type="text" asp-for="Name" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="col-form-label">Email</label>
                            <input class="form-control" type="text" asp-for=Email disabled>

                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Waiter</label>
                            <select class="form-control" asp-items="(SelectList)@ViewBag.Workers" id="waiterid">
                            </select>

                        </div>
                        <div class="form-group" style="overflow-x:auto">
                            <table class="table  table-hover table-striped">
                                <thead >
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <select class="form-control product" asp-items="(SelectList)@ViewBag.Products"> </select></td>
                                        <td><input type="number" class="form-control" value="1" min="1" /></td>
                                        <td style="width:150px" class="d-flex"><a class="btn btn-success Addrow text-light">+</a></td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                        <center>
                            <a class="btn btn-danger submit text-light">Submit</a>
                        </center>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="/assets/js/MakeOrder.js">

    </script>
}




