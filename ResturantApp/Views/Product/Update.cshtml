
@{
    ViewData["Title"] = "Update";
}

@model ProductVM;
<div class="col-12">
    <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Update Product</h4>
                   
                    <form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="@Model.ImgName" name="oldimgname" id="oldimg" />
                        <input type="hidden" value="@Model.Id"  id="ID" name="Id" />
              
                        <div class="text-danger">@ViewBag.error</div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Name</label>
                            <input class="form-control" type="text" placeholder="Enter Product Name" asp-for="Name" id="name">
                            <span class="text-danger d-block my-2" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="unitPrice" class="col-form-label">Unit Price</label>
                            <input class="form-control" type="number" asp-for=unitPrice placeholder="Enter UnitPrice" id="unitprice">
                            <span class="text-danger d-block my-2" asp-validation-for="unitPrice"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Img" class="col-form-label">Current Image</label>
                           
                            <img src="~/productImages/@Model.ImgName" width="300" height="250" class="my-2 d-block" />
                          

                        </div>
                        <div class="form-group">
                            <label asp-for="Img" class="col-form-label">New Image</label>
                            <input class="form-control" type="file" asp-for=Img id="imgfile" data-val="false" >
                            <img src="" width="200" height="200" id="image" class="my-2" />
                            <span class="text-danger d-block my-2" asp-validation-for="Img"></span>


                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="col-form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter description" id="description"></textarea>
                            <span class="text-danger d-block my-2" asp-validation-for="Description"></span>
                        </div>
                        <center>
                            <button class="btn btn-primary" type="submit">
                                Update
                            </button>
                        </center>

                    </form>
                </div>

            </div>

        </div>
        <!-- Textual inputs end -->
        <!-- Radios start -->
        <!-- button with dropdown end -->
    </div>
</div>

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/js/ShowImage.js">

</script>


