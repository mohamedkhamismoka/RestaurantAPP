@{
    ViewData["Title"] = "Details";
}
@model WorkerVM
<div class="col-12">
    <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title"> Worker Details</h4>

                    <form>


                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Name</label>
                            <input class="form-control" type="text" placeholder="Enter Product Name" asp-for="Name" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="col-form-label">Address</label>
                            <input class="form-control" type="text" asp-for=Address placeholder="Enter Address" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="BirthDate" class="col-form-label">Birthdate</label>
                            <input type="date" asp-for="BirthDate" class="form-control" placeholder="Enter Birthdate" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="HireDate" class="col-form-label">HireDate</label>
                            <input type="date" asp-for="HireDate" class="form-control" placeholder="Enter Hiredate" disabled>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary" class="col-form-label">Salary</label>
                            <input class="form-control" type="number" asp-for=Salary placeholder="Enter Salary" disabled>
                       
                        </div>
                        <div class="form-group">
                            <label asp-for="Img" class="col-form-label">Image</label>
                          
                            <img src="~/Workerimages/@Model.imgname" width="200" height="200" id="image" class="my-2 ml-2" />
                          

                        </div>

                        <div class="form-group">
                            <label asp-for="CV" class="col-form-label">CV</label>
                            <a class="btn btn-danger ml-2" download="download" href="~/workercv/@Model.CVname">download CV</a>

                        </div>
                        <center>
                            <a class="btn btn-success" asp-controller="Worker" asp-action="Index">BackToData</a>
                        </center>

                    </form>
                </div>

            </div>

        </div>
        <!-- Textual inputs end -->
        <!-- Radios start -->
        <!-- button with dropdown end -->
    </div>
</div>









