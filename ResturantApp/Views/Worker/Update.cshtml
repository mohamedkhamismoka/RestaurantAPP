@{
    ViewData["Title"] = "Update";
}
@model WorkerVM
<div class="col-12">
    <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Update Worker</h4>

                    <form asp-controller="Worker" asp-action="Update" method="post"  enctype="multipart/form-data">
                        <input type="hidden" name="oldimg" value="@Model.imgname" id="imgname" />
                        <input type="hidden" name="oldcv" value="@Model.CVname"  id="cvname"/>
                        <input type="hidden"  value="@Model.Id" id="ID" />

                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Name</label>
                            <input class="form-control" type="text" placeholder="Enter Name" asp-for="Name" id="name"> 
                            <span class="text-danger d-block my-2" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="col-form-label">Address</label>
                            <input class="form-control" type="text" asp-for=Address placeholder="Enter Address" id="address">
                            <span class="text-danger d-block my-2" asp-validation-for="Address"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="BirthDate" class="col-form-label">Birthdate</label>
                            <input type="date" asp-for="BirthDate" class="form-control" placeholder="Enter Birthdate" id="birthdate">
                            <span class="text-danger d-block my-2" asp-validation-for="BirthDate"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="HireDate" class="col-form-label">HireDate</label>
                            <input type="date" asp-for="HireDate" class="form-control" placeholder="Enter Hiredate" id="hiredate">
                            <span class="text-danger d-block my-2" asp-validation-for="HireDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary" class="col-form-label">Salary</label>
                            <input class="form-control" type="number" asp-for=Salary placeholder="Enter Salary" id="salary">
                            <span class="text-danger d-block my-2" asp-validation-for="Salary"></span>
                        </div>
                          <div class="form-group">
                            <label for="oldImg" class="col-form-label">Current Image</label>
                            <img src="~/Workerimages/@Model.imgname" width="200" height="200"  class="my-2">
                            </div>
                        <div class="form-group">
                            <label asp-for="Img" class="col-form-label">Image</label>
                            <input class="form-control img" type="file" asp-for=Img id="imgfile" data-val="false">
                            <img src="" width="200" height="200" id="image" class="ml-2" />
                            <span class="text-danger d-block my-2" asp-validation-for="Img"></span>


                        </div>
                        <div class="form-group">
                            <label for="oldcv" class="col-form-label">Current CV</label>
                            <a href="~/workercv/@Model.CVname" class="btn btn-danger"   class="ml-2" >Download </a>
                            </div>
                        <div class="form-group">
                            <label asp-for="CV" class="col-form-label">CV</label>
                            <input class="form-control cv" type="file" asp-for=CV id="imgfile" data-val="false">
                            <span class="text-danger d-block my-2" asp-validation-for="CV"></span>

                    

                        </div>
                        <center>
                            <button class="btn btn-primary" type="submit" id="update">Update</button>
                        </center>

                    </form>
                </div>

            </div>

        </div>
        <!-- Textual inputs end -->
        <!-- Radios start -->
        <!-- button with dropdown end -->
    </div>
</div>

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jquery-validation/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/js/ShowImage.js">

</script>








